<div class="d-flex flex-md-row justify-content-center">
  <h3 id="profileHeader">Welcome to your profile <%= user.user_name %></h3>
</div>

<div class="col-md-8">

  <div id="profileCard" class="d-flex justify-content-center card mb-3 bg-white">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-2">User Name</h6>
        </div>
        <div class="col-sm-9 text-secondary">
          <%= user.user_name %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-2">Email</h6>
        </div>
        <div class="col-sm-9 text-secondary">
          <%= user.email %>
        </div>
      </div>
      <hr>
      
     <div class="bg-white col-sm-12">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editUser">
      Edit User
    </button>

    <!-- Modal -->
    <div class="modal fade" id="editUser" tabindex="-1" aria-labelledby="editUser" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editUserLabel">Edit User</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form method="POST" action="/users/<%= user.id %>/?_method=PUT">
            <h5 class="modal-title" id="editUserName">Edit User Name</h5>
            <input type="text" name="user_name" class="modal-body" value="<%= user.user_name %>"required/>
            <input type="submit">
          </form>
          <form method="POST" action="/users/<%= user.id %>/?_method=PUT">
            <h5 class="d-flex align-items-center modal-title" id="editEmail">Edit Email</h5>
            <input type="text" id="email" name="email" class="modal-body" value="<%= user.email %>"required/>
            <input type="submit">
          </form>
          </form>
          <form method="POST" action="/users/<%= user.id %>/?_method=DELETE">
            <input type="submit" value="Delete User">
          </form>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

          </div>
        </div>
      </div>
    </div>
      </div>
    </div>
  </div>